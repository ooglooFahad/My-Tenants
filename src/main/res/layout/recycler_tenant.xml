<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:showDividers="middle"
   >


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        android:layout_marginBottom="16dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottomunderline"
            >

    <RelativeLayout
        android:id="@+id/R1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/Recycler_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Tenant Name: " />

        <TextView
            android:layout_below="@id/Recycler_Name"
            android:id="@+id/Recycler_Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Phone: " />

        <TextView
            android:layout_below="@+id/Recycler_Phone"
            android:id="@+id/Recycler_Rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="Rent Amount: " />

        <TextView
            android:layout_below="@+id/Recycler_Rent"
            android:id="@+id/Recycler_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Email Address: " />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/R2"
        android:layout_toRightOf="@+id/R1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/Recycler_Tenant_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Name" />

        <TextView
            android:id="@+id/Recycler_Tenant_Phone"
            android:layout_below="@+id/Recycler_Tenant_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="1234567890" />

        <TextView
            android:id="@+id/Recycler_Tenant_Rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Recycler_Tenant_Phone"
            android:padding="5dp"
            android:text="12000" />

        <TextView
            android:id="@+id/Recycler_Tenant_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Recycler_Tenant_Rent"
            android:padding="5dp"
            android:text="abc@gmail.com" />

    </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>